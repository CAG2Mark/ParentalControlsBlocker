{
  "schemaVersion": 1,
  "id": "parental-controls-blocker",
  "version": "${version}",

  "name": "ParentalControlsBlocker",
  "description": "Blocks HTTP requests to Microsoft servers due to parental controls. Mitigates lag spikes on chat messages",
  "authors": [
    "CAG2Mark"
  ],
  "contact": {
    "homepage": "https://github.com/CAG2Mark",
    "sources": "https://github.com/CAG2Mark/ParentalControlsBlocker"
  },

  "license": "MIT",
  "icon": "assets/parental-controls-blocker/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.markng.parentalcontrolsblocker.ParentalControlsBlockerMod"
    ]
  },
  "mixins": [
    "parental-controls-blocker.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.17.x",
    "java": ">=16"
  },
  "suggests": {
    "another-mod": "*"
  }
}
